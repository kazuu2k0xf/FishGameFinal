<?xml version='1.0' encoding='UTF-8' ?>
<schema version ="1.0"
           xmlns="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://www.l3miage.fr/JeuPoisson"
           xmlns:jp="http://www.l3miage.fr/JeuPoisson"
           elementFormDefault="qualified">


<element name="niveau" type="jp:Niveau"> </element>
    
    <!--- Type JeuPoisson -->
    <complexType name="Niveau">
        <sequence>
            <element name="general" type="jp:General" minOccurs="1" maxOccurs="1"> </element>
            <element name="carte" type="jp:Carte" minOccurs="1"> </element> 
        </sequence>
    </complexType>

    <!--- Type General -->
    <complexType name="General">
        <sequence>   
            <element name="joueur" type="jp:Joueur" minOccurs="1" maxOccurs="1"> </element>
            <element name="poisson" type="jp:Poisson" minOccurs="1" maxOccurs="1"> </element>
            <element name="fin" type="jp:Fin" minOccurs="1" maxOccurs="1"> </element>
            <element name="pas" type="jp:Pas" minOccurs="1" maxOccurs="1"> </element>
        </sequence>
    </complexType>

    <!--- Type Joueur -->
    <complexType name="Joueur">
        <attribute name="x" type="int"/>   <!--- x toujours entre 0 et 7  -->
        <attribute name="y" type="int"/>   <!--- y toujours entre 0 et 7  -->
    </complexType>
    
    <!--- Type Poisson -->
    <complexType name="Poisson">
        <attribute name="x" type="int" use="required"/>  <!--- x toujours entre 0 et 7  -->
        <attribute name="y" type="int" use="required"/>  <!--- y toujours entre 0 et 7  -->
        <attribute name="texture" type="string" use="required"></attribute>
        <attribute name="nom" type="string" use="required"></attribute>
        <attribute  name="estVisible" type="boolean" use="required"></attribute>
    </complexType>

    <!--- Type Fin -->
    <complexType name="Fin">
        <attribute name="x" type="int"/>
        <attribute name="y" type="int"/>
    </complexType>
    
    <!--- Type Pas -->
    <complexType name="Pas">
        <attribute name="nombrePAS" type="int"/>
    </complexType>

    <!--- Type Carte -->
    <complexType name="Carte">
        <sequence>
            <element name="collision" type="jp:Collision">  </element>
        </sequence>
    </complexType>
    
    <complexType name="Collision">
        <sequence>
            <element name="ligne" type="jp:Ligne" minOccurs="8" maxOccurs="8"> </element>
        </sequence>
    </complexType>
    
    <simpleType name="Ligne">
        <restriction base="string">
            <pattern value="[C ]{8}"/>
        </restriction>
    </simpleType>
</schema>